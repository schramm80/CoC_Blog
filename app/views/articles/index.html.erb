<div class="container">
  <% if can? :create, @article %>
  <%= link_to 'New Article', new_article_path, :class => 'btn btn-primary' %><br />
  <% end %>
</div>


<div class="container">
  <% @articles.each do |article| %>

  <div class="page-header">
    <h1><%= link_to article.title, article %></h1>
  </div>

  <p>
    <em>
      Posted by <%= article.user %> on <%= article.created_at.strftime("%B %d, %Y") %><br />
      last update <%= article.updated_at.strftime("%B %d, %Y") %><br />
    </em>
  </p>

  <div class="btn-group btn-group-lg" role="group" aria-label="Small button group">
    <%= link_to 'Read', article, :class => "btn btn-read" %>

    <% if can? :update, article %>
    <%= link_to 'Edit', edit_article_path(article), :class => "btn btn-edit" %>
    <% end %>

    <% if can? :destroy, article %>
    <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-delete" %>
    <% end %>
  </div>

  <% end %><!-- @articles.each do |article| -->
</div>
